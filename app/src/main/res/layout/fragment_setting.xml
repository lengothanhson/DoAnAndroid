<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.SettingFragment"
    android:background="@color/backgroundapp"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:background="@android:color/transparent"
        android:layout_marginRight="10dp"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/useravt" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_MSPlist"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Tên người dùng"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_MSPlist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Xem hồ sơ"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="381dp"
        android:layout_height="59dp"
        android:gravity="center_vertical"
        android:text="Tài khoản"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="259dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="29dp"
        android:text="user123@gmail.com"
        android:textColor="@color/white"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="289dp" />

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="381dp"
            android:layout_height="59dp"
            android:gravity="center_vertical"
            android:text="Trình tiết kiệm dữ liệu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="318dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Chất lượng âm thanh"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginRight="200dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:text="Đặt chất lượng âm thanh của bạn ở mức (tương đương 24 kbit/giây) và tắt canvas của nghệ sĩ"
                    android:textColor="@color/white"
                    android:textStyle="italic"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="381dp"
            android:layout_height="59dp"
            android:gravity="center_vertical"
            android:text="Podcast Video"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Chỉ tải âm thanh xuống"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginRight="180dp"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉ lưu podcast video ở dạng âm thanh"
                    android:textColor="@color/white"
                    android:textStyle="italic" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Chỉ phát trực tuyến âm thanh"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginRight="135dp"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:text="Chỉ phát podcast video ở dạng âm thanh  không có Wi-fi"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="579dp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>