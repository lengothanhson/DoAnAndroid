<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Setting.UserInformationFragment"
    android:background="@color/backgroundapp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_baseline_more_vert_24"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="75dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_face_24"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textUN"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        android:text="Tên người dùng"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="300dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Người theo dõi"
        android:textColor="@color/white"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="320dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="40"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="300dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Đang theo dõi"
        android:textColor="@color/white"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="320dp"/>
    <TextView
        android:id="@+id/textDanhSachPhat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:text="Danh sách phát"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

   <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDanhSachPhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="380dp"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDanhSachPhat"/>

</FrameLayout>